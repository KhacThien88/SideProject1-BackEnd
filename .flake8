[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    .coverage,
    htmlcov,
    .tox,
    .cache,
    .DS_Store,
    .vscode,
    .idea
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    scripts/*:S101
max-complexity = 10
select = C,E,F,W,B,B950
